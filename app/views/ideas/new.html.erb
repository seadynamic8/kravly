<% title "Add Your Idea" %>

<div class="idea-new-page">

<!-- ##################### IDEA-NEW PITCH PAGE ###########################-->

<!-- ************** IDEA-NEW HEADER SECTION **************** -->

<header class="idea-new-header">
	<h1><%= yield(:title) %></h1>

	<ul class="idea-new-progress-bar">
		<hr>

		<li>
			<header>Pitch</header>
			<div class="icon active"></div>
		</li>
		<li>
			<header>Description</header>
			<div class="icon"></div>
		</li>
		<li>
			<header>Images/Media</header>
			<div class="icon"></div>
		</li>
	</ul>
</header>

<!-- ************** END IDEA-NEW HEADER SECTION **************** -->

<%= form_for @idea, html: { multipart: true, id: "idea-new-form" } do |f| %>

	<%= error_messages_for(@idea) %>

<!-- ************** IDEA-NEW PITCH SECTION **************** -->

	<div class="page" id="idea-new-pitch">
		
		<header>
			Give a brief overview of your idea
		</header>

		<ul class="form-section">
			<li class="title">
				<%= f.label :title, "Give your idea a title" %>
				<%= f.text_field :title, placeholder: "Title" %>
			</li>

			<li class="board">
				<%= f.label :board, "Which board are you adding your idea to?" %>

				<% if @last_board %>
					<%= f.select :board_id, 
							@boards.map { |board| [board.name, board.id] }, { selected: @last_board.id} %>
				<% else %>
					<%= f.select :board_id, 
							@boards.map { |board| [board.name, board.id] } %>
				<% end %>
			</li>

			<li class="nav">
				<%= link_to "Next: Describe Your Idea", "#", class: "next-button small button" %>
			</li>
		</ul>

		<div class="sidebar">
			<h3>Tips:</h3>
			<ul>
				<li>Describe what your idea is and what it does.</li>
				<li>Make it captivating.</li>
				<li>Help the reader visualize the idea.</li>
				<li>Use correct grammar and spelling.</li>
			</ul>
		</div>

	</div>

<!-- ************** END IDEA-NEW PITCH SECTION **************** -->

<!-- ************** IDEA-NEW DESCRIPTION SECTION **************** -->

	<div class="page" id="idea-new-description">
		
		<header>
			How does your idea work and what makes it special?
		</header>

		<ul class="form-section">
			<li class="workspace">
				<%= f.label :workspace, "Workspace"%>
				<%= f.text_area :content, placeholder: "Describe your Idea", style: "min-height: 200px" %>
			</li>

			<li>
				<%= link_to "Back", "#", class: "prev-button small button" %>
				<%= link_to "Next: Add Media", "#", class: "next-button small button" %>
			</li>
		</ul>

		<div class="sidebar">
			<h3>Tips:</h3>
			<ul>
				<li>Describe what you idea is and what it does.</li>
				<li>Make it captivating.</li>
				<li>Help the reader visualize the idea.</li>
				<li>Use correct grammar and spelling.</li>
			</ul>
		</div>

	</div>

<!-- ************** END IDEA-NEW DESCRIPTION SECTION **************** -->

<!-- ************** IDEA-NEW MEDIA SECTION **************** -->

	<div class="page" id="idea-new-media">
		
		<header>
			Help the community visualize the idea
		</header>

		<ul class="form-section">
			<li class="photo">
				<%= f.label :cover_photo, "Upload a Photo" %>
				<%= f.file_field :image %>

				<%= f.url_field :remote_image_url, placeholder: "Or Image URL" %>

				<p class="notice">Choose a photo that represents your Idea. Max image size: 2MB (.jpg, .jpeg, .png, .gif)</h6>

				<%= image_tag(@idea.image.small_thumb.url) if @idea.image? %>

				<%= f.hidden_field :image_cache %>
			</li>

			<li class="video">
				<%= f.label :video_url, "Video URL", class: "left inline" %>
				<%= f.url_field :video_url, placeholder: "Video URL (Youtube or Vimeo)" %>
			</li>

			<li>
				<%= link_to "Back", "#", class: "prev-button small button" %>
				<%= link_to "Finish: Add Your Idea", "#", class: "next-button small button" %>
			</li>
		</ul>

		<div class="sidebar">
			<h3>Tips:</h3>
			<ul>
				<li>Describe what you idea is and what it does.</li>
				<li>Make it captivating.</li>
				<li>Help the reader visualize the idea.</li>
				<li>Use correct grammar and spelling.</li>
			</ul>
		</div>

	</div>

<!-- ************** END IDEA-NEW MEDIA SECTION **************** -->

<% end %>

