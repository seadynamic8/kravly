<div class="row idea-header">
	<div class="large-6 columns title">
		<h4><%= @idea.title %></h4>
	</div>
	<div class="large-2 columns">
		<h3><%= @idea.votes %> votes</h3>
	</div>
	<div class="large-4 columns">
	</div>
</div>

<div class="row">

	<div class="large-8 columns idea-main">
		<div class="panel">
			<%= @idea.content %>
		</div>

		<div class="panel">
			<% if current_user && current_user == @idea.user %>
				<%= link_to "Edit Idea", edit_idea_path(@idea), class: "small button"  %>
				<%= link_to "Delete", idea_path(@idea), method: :delete, 
						data: { confirm: "Are you sure?" }, class: "small button" %>
			<% else %>
				<%= link_to "Vote", vote_idea_path(@idea), class: "button" %>
			<% end %>
		</div>
	</div>

	<div class="large-3 columns">
		<div class="row idea-user idea-side">
			<h4><%= link_to @idea.board.name, board_path(@idea.board) %></h4>
		</div>

		<div class="row idea-user idea-side">
			<div class="large-4 columns">
				<%= image_tag "http://placehold.it/50x50" %>
			</div>
			<div class="large-8 columns">
				<h5><%= @idea.user.fullname %></h5>
				<!-- <h8>Entrepreneur</h8> -->
			</div>
		</div>

		<div class="row idea-side">
			<h9>Stats</h9>
			<hr>
			<div class="large-4 columns">
				231<br>views
			</div>
			<div class="large-4 columns">
				<%= @idea.votes %><br>votes
			</div>
			<div class="large-4 columns">
				6<br>comments
			</div>
		</div>

		<% if @rand_ideas %>
			<div class="row idea-side">
				<h9>More Ideas</h9>
				<hr>
				<% @rand_ideas.each do |idea| %>
					<div class="large-4 columns">
						<%= link_to (image_tag "http://placehold.it/80x50"), idea_path(idea) %>
					</div>
				<% end %>
			</div>
		<% end %>

		<div class="row idea-side">
			<% if current_user && current_user == @idea.user %>
				<hr>
				<%= link_to "Leave a Comment", "#comments", class:"button" %>
			<% else %>
				<h9>Give Feedback</h9>
				<hr>
				<%= link_to "Leave a Comment", "#comments", class:"button" %>
				<%= link_to "Vote", vote_idea_path(@idea), class:"button" %>
			<% end %>
		</div>
	</div>
</div>

<a name="comments"></a>
<div class="row">
	<div class="large-8 columns idea-comment">
		<%= render partial: "shared/disqus", locals: { title: @idea.title, identifier: @idea.id } %>
	</div>
</div>

