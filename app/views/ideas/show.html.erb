	<div class="large-8 columns idea-comment">
		<%= render partial: "shared/disqus", locals: { title: @idea.title, identifier: @idea.id } %>
	</div>
</div> -->

<div class="row">
	<div class="large-8 columns comment-section">
		
		<div class="comments">
			<%= render partial: 'comments/form', locals: { comment: @new_comment } %>
			<% if @comments.empty? %>
				<div class="row empty-comments">
					<div class="large-6 large-centered columns">
						<br>
						<br>
						<h6 class="subheader">There are no comments yet.</h6>
					</div>
				</div>
			<% else %>
				<%= render partial: 'comments/comment', collection: @comments %>
			<% end %>
		</div>
		
	</div>
</div>


