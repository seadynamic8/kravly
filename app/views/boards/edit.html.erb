<% title "Edit A Board" %>

<div class="row">
	<div class="large-7 large-centered columns">
		<%= form_for [@board.user, @board] do |f| %>
			<%= error_messages_for(@board) %>

			<fieldset>
				<legend><%= yield(:title) %></legend>

				<%= render partial: 'form', locals: { f: f } %>
			</fieldset>
		<% end %>
	</div>
</div>