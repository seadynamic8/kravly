<div class="row group-header">
		<div class="large-4 large-offset-4 columns">
			<div class="board-name"><h4><%= @board.name %></h4></div>
		</div>
		<% if current_user && current_user == @board.user %>
			<div class="large-4 columns right-section">
				<%= link_to "Add Idea", new_idea_path, class: "small button" %>
			</div>
		<% end %>
</div>
<div class="row group-header">
	<div class="large-12 large-centered columns">
		<h5 class="subheader board-desc"><%= @board.description %></h5>
	</div>
</div>

<hr>

<div class="row group-header-stats">
	<div class="large-4 columns">
		<%= image_tag "http://placehold.it/25x25" %>
		<h6><%= @board.user.fullname %></h6>
	</div>
	<% if current_user && current_user == @board.user %>
		<div class="large-4 columns">
			<div style="text-align: center;">
				<%= link_to "Edit Board", edit_board_path(@board), class: "small button" %>
			</div>
		</div>
	<% end %>
	<div class="large-4 columns">
		<h5><%= @board.votes %> Votes</h5>
	</div>
</div>

<hr>

<div class="row group-item">
	<% @board.ideas.each do |idea| %>
		<div class="large-4 columns">
			<h5><%= link_to idea.title, idea_path(idea) %></h5>
			<%= link_to (image_tag "http://placehold.it/315x175"), idea_path(idea) %>
			<% if current_user && current_user == @board.user %>
				<%= link_to "Edit", edit_idea_path(idea), class: "tiny button" %>
				<%= link_to "Delete", idea_path(idea), method: :delete, 
						data: { confirm: "Are you sure?" }, class: "tiny button" %>
			<% end %>
		</div>
	<% end %>
</div>
