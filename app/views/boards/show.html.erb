<div class="row group-header">
	<div class="large-10 large-centered columns">
		<div class="row group-header-user">
			<div class="large-6 columns">
				<%= image_tag "http://placehold.it/150x150" %>
				<h3><%= @board.user.fullname %></h3>
			</div>
			<div class="large-3 large-offset-2 columns">
				<%= link_to "See Profile", "#", class:"button" %>
			</div>
		</div>
		<hr>
	</div>
</div>

<div class="row group-header-stats">
	<div class="large-3 large-centered columns">
		<div class="board-name"><h4><%= @board.name %></h4></div>
	</div>
</div>

<hr>


<div class="row group-item">
	<% @board.ideas.each do |idea| %>
		<div class="large-4 columns">
			<h5><%= link_to idea.title, idea_from_board_path(idea, @board) %></h5>
			<%= link_to (image_tag "http://s3.amazonaws.com/skillshare/uploads/project/6d40c3195a94b7b583083d92efb52cc3/cover_image.png", class:"item-large"), idea_path(idea) %>
			
		</div>
	<% end %>
</div>
