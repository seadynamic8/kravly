<% title "Login" %>

<header class="session-new-header">
	<h1><%= yield(:title) %></h1>
</header>

<%= form_tag sessions_path, class: "session-new-form" do |f| %>

	<ul class="form-section">
		<li class="username">
				<%= label_tag :username, "Email / Username" %>
				<%= text_field_tag :username, params[:username],
						placeholder: "Enter your email or username".upcase %>
		</li>

		<li class="password">
				<%= label_tag :password %>
				<%= password_field_tag :password, params[:password],
						placeholder: "Enter your password".upcase %>
		</li>

		<%= hidden_field_tag "return_to", @return_to %>

		<li class="nav">
				<%= button_tag "Log In", class: "button" %>
		</li>
	</ul>

<% end %>

<div class="session-extras">
		<p><%= link_to "New User?", new_user_path %></p>
		
		<p><%= link_to "Forgot Password?", new_password_reset_path %></p>
</div>