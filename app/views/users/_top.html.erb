
<%= render 'shared/flash_alert' %>

<!-- ##################### HEADER SECTION ###########################-->

<div class="user-header">
	<%= image_tag @user.avatar.profile.url %>

	<div class="user-info">
		<h1>
			<%= @user.display_name %>
			<span class="user-location">
				<%= " - " + @user.location if @user.location.present? %>
			</span>
		</h1>
		
		<% if @user.about.present? %>
			<p class="user-about"><%= @user.about %></p>
		<% else %>
			<p class="request">Awesome Kravly community member :)</p>
		<% end %>
		
		<% if @user.website.present? %>
			<p class="user-website">
				<%= content_tag :i, nil, class: "fi-web" %> <%= @user.website %>
			</p>
		<% end %>

		<% if permit? "users", "edit", @user %>
			<div class="edit-button">
				<%= link_to (content_tag :i, nil, class: "fi-widget"), 
						edit_user_path(@user), class: "edit-link" %>
			</div>
		<% end %>
	</div>

</div>

<!-- ##################### END HEADER SECTION ###########################-->

<!-- ##################### USER BAR SECTION ###########################-->

<div class="user-bar">
	<ul class="user-nav">
		<li>
			<span class="count"><%= link_to "#{@user.boards.count}", 
																boards_user_path(@user) %></span>
			<%= link_to "Boards", boards_user_path(@user) %>
		</li>
		<span class="seperator">|</span>
		<li>
			<span class="count"><%= link_to "#{@user.ideas.count}",
																ideas_user_path(@user) %></span>
			<%= link_to "Ideas", ideas_user_path(@user) %>
		</li>
		<span class="seperator">|</span>
		<li>
			<span class="count"><%= link_to "#{@user.votes}",
																votes_user_path(@user) %></span>
			<%= link_to (content_tag :i, nil, class: "fi-like"), votes_user_path(@user),
					class: "vote-link" %>
		</li>
	</ul>

