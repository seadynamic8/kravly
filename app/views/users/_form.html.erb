<div class="row">
	<div class="large-2 columns">
		<%= f.label :username, class: "left inline" %>
	</div>
	<div class="large-8 columns">
		<%= f.text_field :username, placeholder: "Username" %>
	</div>
</div>

<div class="row">
	<div class="large-2 columns">
		<%= f.label "Email*", class: "left inline" %>
	</div>
	<div class="large-8 columns">
		<%= f.email_field :email, placeholder: "Email" %>
	</div>
</div>

<div class="row">
	<div class="large-2 columns">
		<%= f.label "Password*", class: "left inline" %>
	</div>
	<div class="large-8 columns">
		<%= f.password_field :password, placeholder: "Password" %>
	</div>
</div>

<div class="row">
	<div class="large-2 columns">
		<%= f.label "Password Confirmation*", class: "left inline" %>
	</div>
	<div class="large-8 columns">
		<%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %>
	</div>
</div>

<div class="row">
	<div class="large-3 columns">
		<%= f.label "First Name", class: "left inline" %>
	</div>
	<div class="large-8 columns">
		<%= f.text_field :firstname, placeholder: "First Name" %>
	</div>
</div>

<div class="row">
	<div class="large-3 columns">
		<%= f.label "Last Name", class: "left inline" %>
	</div>
	<div class="large-8 columns">
		<%= f.text_field :lastname, placeholder: "Last Name" %>
	</div>
</div>

<div class="row">
	<div class="large-3 columns">
		<%= f.label "Profile Photo", class: "left inline" %>
	</div>
	<div class="large-8 columns">
		<div class="row collapse">
			<%= f.file_field :avatar %><br><br>
			<div class="large-3 columns">
				<span class="prefix">http://</span>
			</div>
			<div class="large-9 columns">
				<%= f.url_field :remote_avatar_url, placeholder: "Or Image URL" %>
			</div>
			<h6 class="subheader">Choose a photo. Max image size: 2MB (.jpg, .jpeg, .png, .gif)</h6>
		</div>
	</div>
</div>

<%= f.hidden_field :avatar_cache %>

<div class="row">
	<div class="large-8 large-centered columns">
		<%= f.submit class: "button" %>
		<% if params[:action] == 'new' %>
			<%= link_to "Cancel", user_path(current_user), class: "button" %>
		<% else %>
			<%= link_to "Cancel", user_settings_path(current_user), class: "button" %>
		<% end %>
	</div>
</div>
