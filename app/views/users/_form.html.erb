<div class="row">
	<div class="large-2 columns">
		<%= f.label :username, class: "left" %>
	</div>
	<div class="large-8 columns">
		<%= f.text_field :username, placeholder: "Username" %>
	</div>
</div>

<div class="row">
	<div class="large-2 columns">
		<%= f.label "Email*", class: "left" %>
	</div>
	<div class="large-8 columns">
		<%= f.email_field :email, placeholder: "Email" %>
	</div>
</div>

<div class="row">
	<div class="large-2 columns">
		<%= f.label "Password*", class: "left" %>
	</div>
	<div class="large-8 columns">
		<%= f.password_field :password, placeholder: "Password" %>
	</div>
</div>

<div class="row">
	<div class="large-2 columns">
		<%= f.label "Password Confirmation*", class: "left" %>
	</div>
	<div class="large-8 columns">
		<%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %>
	</div>
</div>

<div class="row">
	<div class="large-3 columns">
		<%= f.label "First Name", class: "left" %>
	</div>
	<div class="large-8 columns">
		<%= f.text_field :firstname, placeholder: "First Name" %>
	</div>
</div>

<div class="row">
	<div class="large-3 columns">
		<%= f.label "Last Name", class: "left" %>
	</div>
	<div class="large-8 columns">
		<%= f.text_field :lastname, placeholder: "Last Name" %>
	</div>
</div>

<div class="row">
	<div class="large-3 columns">
		<%= f.label "Profile Photo", class: "left" %>
	</div>
	<div class="large-8 columns">
		<%= f.file_field :avatar %>
		<%= f.text_field :remote_avatar_url, placeholder: "Or Image URL" %>
		<h6 class="subheader">Choose a photo. Max image size: 2MB (.jpg, .jpeg, .png, .gif)</h6>
	</div>
</div>

<%= f.hidden_field :avatar_cache %>

<div class="row">
	<div class="large-5 large-centered columns">
		<%= f.submit class: "button" %>
	</div>
</div>
