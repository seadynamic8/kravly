<% title "Edit User" %>

<div class="row">
	<div class="large-7 large-centered columns">
		<%= form_for @user, html: { class: "custom" } do |f| %>
			<%= error_messages_for(@user) %>
			
			<fieldset>
				<legend><%= yield(:title) %></legend>
				<p>You have to re-enter your password to change any field.</p>

				<%= render partial: 'form', locals: { f: f } %>
			</fieldset>
		<% end %>
	</div>
</div>