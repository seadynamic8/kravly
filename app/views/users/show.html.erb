<div class="row user-header">
	<div class="large-10 large-centered columns">
		<div class="row user-header-user">
			<div class="large-6 columns">
				<%= image_tag "http://placehold.it/60x60" %>
				<h3><%= @user.fullname %></h3>
			</div>
			<div class="large-3 large-offset-2 columns">
				<%= link_to "See Profile", "#", class:"button" %>
			</div>
		</div>
		<hr>
	</div>
</div>

<div class="row user-header-stats">
	<div class="large-5 large-offset-2 columns">
		<div class="stats"><%= @user.boards.count %> Boards&nbsp;&nbsp;&nbsp; | 
			&nbsp;&nbsp;&nbsp;<%= @user.votes %> Votes</div>
	</div>
	<div class="large-3 columns">
		<!--
		<%= link_to "Vote All", "#", class:"small button" %>
	-->
	</div>
</div>

<hr>

<% @user.boards.each_with_index do |board, index| %>
	<% if index % 3 == 0 %>

		<div class="row">
			<ul class="large-block-grid-3">

	<% end %>
			
				<li>
					<h5><%= link_to board.name, board_path(board) %></h5>
					<%= link_to (image_tag "http://placehold.it/315x175"), board_path(board) %>
					<ul class="large-block-grid-3">
						<li><%= link_to (image_tag "http://thestudioseaside.squarespace.com/storage/products_header.jpg"), "#" %></li>
						<li><%= link_to (image_tag "http://placehold.it/92x60"), "#" %></li>
						<li><%= link_to (image_tag "http://placehold.it/92x60"), "#" %></li>
					</ul>
					<% if current_user && current_user == @user %>
						<%= link_to "Edit", edit_board_path(board), class: "tiny button" %>
						<%= link_to "Delete", board_path(board), method: :delete, 
								data: { confirm: "Are you sure?" },	class: "tiny button" %>
					<% end %>
				</li>
	
	<% if (index+1) % 3 == 0 %>

			</ul>
		</div>

	<% end %>
<% end %>