<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />

    <meta name="description" content="A community for sharing your business ideas. Find your inspiration or discover interesting product ideas. Find cofounders or investors as well." />
    <meta name="keywords" content="business ideas, business opportunities, entrepreneur ideas, entreprenuer opportunities, business inspiration, inspirational ideas, find a cofounder, business to start, business trends, product ideas" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title>
      <%= content_for?(:title) ? yield(:title) + " - kravly | Share Business Ideas" : "Share Business Ideas, Find Cofounders, Discover Products | kravly" %>
    </title>

  	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    
    <%= csrf_meta_tags %>
  </head>

  <body>

    <div class="wrapper">

    <div class="fixed">
    <nav class="top-bar">
      <ul class="title-area">
        <!-- Title Area -->
        <li class="name">
          <h1><%= link_to "kravly", discover_path %></h1>
        </li>
        <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
      </ul>

      <section class="top-bar-section">
        <!-- Left Nav Section -->
        <ul class="left">
          <li class="divider"></li>
          <li class="has-dropdown categories"><%= link_to "Categories", "#" %>
            <ul class="dropdown">
              <div class="cat-container">
                <li><%= link_to "Popular", discover_path %></li>
                <li><%= link_to "Recent", discover_path( recent: true ) %></li>
              <% @categories.each_with_index do |category, index| %>
                <li><%= link_to category.name, category_index_path(category.slug) %></li>
                <% if index == 11 || index == 25 %>
                  </div>
                  <div class="cat-container">
                <% end %>
              <% end %>
              </div>
            </ul>
          </li>
          <li class="divider"></li>
          <li class="has-form">
            <%= form_tag ideas_path, method: :get do %>
              <div class="row collapse">
                <div class="large-9 columns">
                  <%= search_field_tag :query, params[:query], placeholder: "Search" %>
                </div>
                <div class="large-3 columns">
                  <%= submit_tag "Search", class: "button postfix" %>
                </div>
              </div>
            <% end %>
          </li>
          <li class="divider"></li>
          <li><%= link_to "Discover", discover_path %></li>
          <!-- <li class="divider"></li> -->
          <!-- <li><%= link_to "About", about_path %></li> -->
          <li class="divider"></li>
          <li><%= link_to "Basics", basics_path %></li>
          <li class="divider"></li>
        </ul>
        
        <% if current_user %>
          <ul class="right">
            <li class="divider"></li>
            <li class="has-dropdown" data-no-turbolink><%= link_to "Add", new_idea_path %>
              <ul class="dropdown">
                <li><%= link_to "Board", new_user_board_path(current_user) %></li>
                <li data-no-turbolink><%= link_to "Idea", new_idea_path %></li>
              </ul>
            </li>
            <li class="divider"></li>
            <li class="has-dropdown"><%= link_to current_user.display_name, 
                                            boards_user_path(current_user) %>
              <ul class="dropdown">
                <li><%= link_to "Your Boards", boards_user_path(current_user) %></li>
                <li><%= link_to "Your Ideas", ideas_user_path(current_user) %></li>
                <li><%= link_to "Your Votes", votes_user_path(current_user) %></li>
                <li><%= link_to "Settings", settings_user_path(current_user) %></li>
                <% if permit? "categories", "index" %>
                  <li><%= link_to "All Categories", categories_path %></li>
                <% end %>
                <li><%= link_to "Log Out", logout_path %></li>
              </ul>
            </li>
          </ul>
        <% else %>
          <ul class="right">
            <li class="divider"></li>
            <li class="active"><%= link_to "Login", login_path %></li>
            <li class="divider"></li>
            <li><%= link_to "JOIN", new_user_path, class: "join-button" %></li>
          </ul>
        <% end %>
      </section>
    </nav>
    </div>

    <% if flash[:notice] %>
      <div class="row">
        <div data-alert class="alert-box success">
          <%= flash[:notice] %>
          <%= link_to (raw "&times;"), "#", class: "close" %>
        </div>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="row">
        <div data-alert class="alert-box alert">
          <%= flash[:alert] %>
          <%= link_to (raw "&times;"), "#", class: "close" %>
        </div>
      </div>
    <% end %>

    <%= yield %>

    <div class="push"></div>
    </div>

    <footer>
      <div class="row">
        <div class="large-4 columns">
          <%= link_to "Terms of Use", terms_path %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Privacy", privacy_path %>
        </div>
        <div class="large-4 columns credit">
          kravly.com &copy; Star Cache, LLC
        </div>
      </div>
    </footer>

    <script src="//static.getclicky.com/js" type="text/javascript"></script>
    <script type="text/javascript">try{ clicky.init(100670206); }catch(e){}</script>
    <noscript><p><img alt="Clicky" width="1" height="1" src="//in.getclicky.com/100670206ns.gif" /></p></noscript>

  </body>
</html>
