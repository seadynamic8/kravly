<% @most_popular_ideas.each_with_index do |idea, index| %>
	<% if index % 3 == 0 %>
		<div class="row">
			<ul class="large-block-grid-3">
	<% end %>
				<li>
					<div class="idea-block">
						<h5><%= link_to idea.title, idea_path(idea) %></h5>
						<%= link_to (image_tag idea.image.thumb.url), idea_path(idea) %>
						<div class="idea-bottom">
							<div class="vote"><%= idea.votes %></div>
							<%= image_tag "http://placehold.it/50x50" %>
							<div class="name"><%= link_to idea.user.fullname, user_path(idea.user) %></div>
						</div>
					</div>
				</li>
	<% if (index+1) % 3 == 0 %>

			</ul>
		</div>

	<% end %>
<% end %>