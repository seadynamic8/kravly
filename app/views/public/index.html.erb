<div class="spacer"></div>
<% unless current_user %>
	<section class="banner">
		<div class="row intro-note">
			<div class="large-8 large-centered columns">
				<h1 class="title">Welcome to kravly!</h1>
				<h3 class="subtitle">The community where people work together to create new products or services.</h3>
				<%= link_to "GET STARTED NOW", new_user_path, class: "button" %><br>
				<%= link_to "How does it work?", intro_path, class: "guide-link" %>
			</div>
		</div>
		<hr>
	</section>
<% end %>

<div class="row links">
	<div class="large-4 large-centered columns">
		<%= link_to " Most Popular ", root_url %>|
		<%= link_to " Recently Updated ", root_url( recent: true ) %>
	</div>
	<div class="large-12 columns">
		<hr>
	</div>
</div>

<% @ideas.each_with_index do |idea, index| %>
	<% if index % 3 == 0 %>
		<div class="row">
			<ul class="large-block-grid-3">
	<% end %>
				<li>
					<div class="block">
						<h5><%= link_to idea.title, idea_path(idea) %></h5>
						<%= link_to (image_tag idea.image.thumb.url), idea_path(idea) %>
						<div class="idea-bottom">
							<div class="vote"><%= idea.votes %></div>
							<%= link_to (image_tag idea.user.avatar.profile.url),
										boards_user_path(idea.user) %>
							<div class="name"><%= link_to idea.user.display_name, 
																			boards_user_path(idea.user) %></div>
						</div>
					</div>
				</li>
	<% if (index+1) % 3 == 0 %>

			</ul>
		</div>

	<% end %>
<% end %>

<div style="clear:both;"></div>

<div class="pagination-centered">
	<%= will_paginate @ideas, inner_window: 4, outer_window: 2,
	previous_label: '&laquo;'.html_safe, next_label: '&raquo;'.html_safe %>
</div>

<div class="row end-note">
	<div class="large-9 large-centered columns">
		<h6 class="subheader"><%= link_to "Click here", about_path %> to read more about us.</h6>
	</div>
</div>