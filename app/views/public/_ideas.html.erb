<% @ideas.each_with_index do |idea, index| %>
	<% if index % 3 == 0 %>
		<div class="row">
	<% end %>

			<li class="discover-square">
				
				<div class="category">
					<%= idea.board.category.name if idea.board.category %>
				</div>

				<header><%= link_to idea.title, idea_path(idea) %></header>

				<% if Rails.env == "development" %>
				<p class="pitch">
					Lorem ipsum dolor sit amet, consectetur adipisicing elit. Explicabo beatae cum totam illum placeat debitis impedit rem dolorum veniam laboriosam.
				</p>
				<% end %>

				<div class="img-container">
					<%= link_to (image_tag idea.image.thumb.url), idea_path(idea) %>
					<p class="img-source hidden"><%= idea.source %></p>
				</div>

				<div class="discover-square-extras">
					<div class="user-section">
						<%= link_to (image_tag idea.user.avatar.small_profile.url),
									boards_user_path(idea.user) %>
						<%= link_to idea.user.display_name, 
							boards_user_path(idea.user), class: "user-name" %>
					</div>
					
					<div class="vote-section">
						<% if (permit? "ideas", "vote", idea) %>
							<% if current_user.not_voted?(idea) %>
							<%= link_to raw("Vote <i class='fi-like like-symbol'></i>"), 
										vote_idea_path(idea), class: "tiny button", id: "like-button" %>
							<% else %>
							<%= link_to raw("Vote <i class='fi-like like-symbol'></i>"), 
										vote_idea_path(idea), class: "tiny button disabled", 
										id: "like-button" %>
							<% end %>
						<% end %>
						<span class="vote"><%= idea.votes %></span>
					</div>
				</div>

			</li>

	<% if (index+1) % 3 == 0 || (index+1) == @ideas.count %>
		</div>
	<% end %>
<% end %>